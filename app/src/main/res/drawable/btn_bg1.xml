<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!--输入框背景-->

    <!-- 设置边距 -->
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"/>
    <!-- 设置圆角 -->
    <corners
        android:radius="20dp"/>
    <!-- 设置边框粗细和颜色-->
    <stroke
        android:color="#E7E7E7"
        android:width="2dp"/>

    <!-- 填充 -->
    <solid
        android:color="#E7E7E7"/>
</shape>