<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DownloadActivity">

    <LinearLayout
        android:id="@+id/download_list_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/download_back"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@color/trans_color"
            android:textColor="@color/blackGray"
            android:paddingBottom="0dp"
            android:gravity="center|start"
            android:paddingLeft="5dp"
            android:textSize="20dp"
            android:text="〈"/>

        <TextView
            android:text="下载管理"
            android:textSize="17dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/download_file"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginLeft="-8dp"
                android:scaleType="centerInside"
                android:src="@drawable/btn_file" />
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/layout_edit_head"/>

    <LinearLayout
        android:id="@+id/download_bg"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="空空如也"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/download_mg_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <include layout="@layout/layout_edit_menu"/>

</LinearLayout>